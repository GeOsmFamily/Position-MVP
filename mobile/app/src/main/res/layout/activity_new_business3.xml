<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.activities.NewBusiness3Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:elevation="5dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/header3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/green">

            <ImageView
                android:id="@+id/back_btn3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_back" />

            <customfonts.TextViewSFProDisplayMedium
                android:id="@+id/toolbartext3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Nouvelle Entreprise (4/5)"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progressBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_below="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/llbed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tous les jours :  " />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_access_time_24"/>

                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/openLundi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Ouverture"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_access_time_24" />

                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/closedLundi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Fermeture"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/llbedSamedi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llbed"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/days5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samedi :  " />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_access_time_24"/>

                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/openSamedi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Ouverture"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_access_time_24" />

                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/closedSamedi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Fermeture"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llbedDimanche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llbedSamedi"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/days6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dimanche :  " />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_access_time_24"/>

                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/openDimanche"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Ouverture"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_access_time_24" />

                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/closedDimanche"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Fermeture"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/llbedDimanche">

                <customfonts.Button_SF_Pro_Display_Medium
                    android:id="@+id/back3"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_round_1"
                    android:text="Retour" />

                <customfonts.Button_SF_Pro_Display_Medium
                    android:id="@+id/next3"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_round_1"
                    android:text="Suivant" />
            </LinearLayout>



            <ProgressBar
                android:id="@+id/progress3"
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupButton"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>