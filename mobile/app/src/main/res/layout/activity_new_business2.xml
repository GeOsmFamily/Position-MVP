<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.activities.NewBusiness2Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:elevation="5dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/green">

            <ImageView
                android:id="@+id/back_btn2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_back" />

            <customfonts.TextViewSFProDisplayMedium
                android:id="@+id/toolbartext2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Nouvelle Entreprise"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/lllon"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/round_edittext_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <customfonts.EditTextSFProDisplayRegular
                android:id="@+id/latitude"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@drawable/round_edittext_background"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <customfonts.EditTextSFProDisplayRegular
                android:id="@+id/longitude"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@drawable/round_edittext_background"
                android:singleLine="true"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>
        </LinearLayout>


    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_below="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_edittext_background"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_local_phone_24"/>

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/round_edittext_background"
                    android:hint="Téléphone principal"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatsapp"
                android:layout_below="@+id/llphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_local_phone_24"/>

                    <customfonts.EditTextSFProDisplayRegular
                        android:id="@+id/whatsapp1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Whatsapp 1"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext_background"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_local_phone_24" />

                    <customfonts.EditTextSFProDisplayRegular
                        android:id="@+id/whatsapp2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/round_edittext_background"
                        android:hint="Whatsapp 2"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llindication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whatsapp"
                android:orientation="horizontal"
                android:background="@drawable/round_edittext_background"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"/>

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/indication_adresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/round_edittext_background"
                    android:hint="Indication Addresse"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llcodepostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llindication"
                android:orientation="horizontal"
                android:background="@drawable/round_edittext_background"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"/>

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/code_postal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/round_edittext_background"
                    android:hint="Code Postal"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llsiteinternet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llcodepostal"
                android:orientation="horizontal"
                android:background="@drawable/round_edittext_background"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"/>

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/site_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/round_edittext_background"
                    android:hint="Site Internet"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"/>
            </LinearLayout>


            <customfonts.Button_SF_Pro_Display_Medium
                android:id="@+id/next2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/llsiteinternet"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_round_1"
                android:text="Suivant" />
            <ProgressBar
                android:id="@+id/progress2"
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/next2"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>