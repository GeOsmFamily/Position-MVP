<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="colorBottomSheetSurface"/>
    <attr name="colorOnBottomSheetSurface"/>
    <attr name="colorOnBottomSheetSurfaceVariant"/>

    <attr name="positionTextAppearance"/>
    <attr name="dataTextAppearance"/>

    <attr name="buttonNoTinting"/>
    <attr name="fabNoTinting"/>
    <attr name="extendedFabNoTinting"/>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorBottomSheetSurface">@color/colorBottomSheetSurface</item>
        <item name="colorOnBottomSheetSurface">@android:color/white</item>
        <item name="colorOnBottomSheetSurfaceVariant">@color/colorOnBottomSheetSurfaceVariant</item>

        <item name="positionTextAppearance">@style/TextAppearance.Position.TextPosition</item>
        <item name="textAppearanceButton">@style/TextAppearance.Position.Button</item>
        <item name="dataTextAppearance">@style/TextAppearance.Position.Data</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Position.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Position.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Position.Large</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Position.BottomSheetDialog</item>

        <item name="floatingActionButtonStyle">@style/Widget.Position.Fab.Primary</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.Position.ExtendedFab.Primary</item>
        <item name="fabNoTinting">@style/Widget.Position.Fab.Primary.NoTinting</item>
        <item name="extendedFabNoTinting">@style/Widget.Position.ExtendedFab.Primary.NoTinting</item>
        <item name="buttonNoTinting">@style/Widget.Position.Button.NoTinting</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- region TEXT APPEARANCES -->
    <style name="TextAppearance.Position.TextPosition" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/futura</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TextAppearance.Position.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Position.Data" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/futura</item>
        <item name="android:textColor">?attr/colorOnBottomSheetSurface</item>
    </style>
    <!-- endregion -->

    <!-- region THEMES -->
    <style name="Theme.Position.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- endregion -->

    <!-- region SHAPE APPEARANCES -->
    <style name="ShapeAppearance.Position.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">32dp</item>
    </style>

    <style name="ShapeAppearance.Position.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Position.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">8dp</item>
    </style>
    <!-- endregion -->

    <!-- region WIDGETS -->
    <style name="Widget.Position.Fab.Primary" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Position.ExtendedFab.Primary" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Position.Fab.Primary.NoTinting" parent="Widget.Position.Fab.Primary">
        <item name="tint">@null</item>
    </style>

    <style name="Widget.Position.ExtendedFab.Primary.NoTinting" parent="Widget.Position.ExtendedFab.Primary">
        <item name="iconTint">@null</item>
    </style>

    <style name="Widget.Position.Button.NoTinting" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@null</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="MyToolbarTheme" parent="ActionBarThemeOverlay" />

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/green</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@color/md_grey_200</item>
    </style>

</resources>
